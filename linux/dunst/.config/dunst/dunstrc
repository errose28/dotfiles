separator_color = "#383838"
frame_color = "#ffffff"
word_wrap = true
format = " <b>%s</b>\n %b"
markup = yes
# Transparency on range [0, 100]
transparency = 30
mouse_left_click = do_action
mouse_right_click = close_current

[shortcuts]
close = ctrl+space
