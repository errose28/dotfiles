#!/usr/bin/env sh

# Inits direnv on the current directory, which should contain a default.nix shell config file.
# Now nix-shell will be autoamtically started when directory is entered.

if [ "$1" = 'on' ]; then
    echo 'use_nix' > .envrc
    direnv allow .
elif [ "$1" = 'off' ]; then
    direnv deny .
    rm .envrc
else
    echo "Unrecognized option $1" 1>&2
    exit 1
fi
